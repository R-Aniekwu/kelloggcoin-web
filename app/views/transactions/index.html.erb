<h1>KelloggCoin Ledger</h1>

<!-- Step 1: List all transactions, starting with the ICO -->
<% transactions = Transaction.all%>
<%users = User.all.inspect%>
<%for transaction in transactions %>
    <%if transaction["from_user_id"] != nil%>
      <ol><li><%="#{transaction["amount"]} from #{transaction["from_user_id"]} to #{transaction["to_user_id"]}"%></li></ol>
    <% else %>
      <ol><li><%="Initial coin offering: #{transaction["amount"]} to #{transaction["to_user_id"]}" %></li></ol>
    <%end%>
<%end%>


